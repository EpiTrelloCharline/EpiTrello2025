{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@helpers/*": [
                "tests/helpers/*"
            ]
        }
    },
    "include": [
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}